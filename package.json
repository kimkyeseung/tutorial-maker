{
  "name": "tutorial-maker",
  "version": "0.1.0",
  "description": "Interactive Tutorial Maker for Touch Screen Education",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:vite": "vite",
    "build": "tsc -b && vite build",
    "tauri:build": "tauri build",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\" \"*.{json,html,md}\" \"src-tauri/**/*.json\"",
