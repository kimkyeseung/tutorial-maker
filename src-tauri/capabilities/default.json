{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "mcp-bridge:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "shell:allow-execute",
    "shell:allow-open",
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$TEMP/**" }]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "$TEMP/**" }, { "path": "$RESOURCE/**" }, { "path": "**" }]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [{ "path": "$TEMP/**" }]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{ "path": "$TEMP/**" }]
    },
    "fs:default"
  ]
}
